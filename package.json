{
  "name": "bib-desk",
  "productName": "Bib-Desk",
  "author": "Eric Biele",
  "copyright": "Eric Biele",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "main.js",
  "build": {
    "appId": "com.bieleric.bibdesk",
    "win": {
      "target": "nsis",
      "icon": "./public/bib-desk-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/bib-desk-icon.icns"
    },
    "directories": {
      "output": "dist/electron"
    },
    "extraResources": [
      {
        "from": "./nordfiwa_dev.db",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "scripts": {
    "electron:dev": "NODE_ENV=development electron .",
    "vite:dev": "NODE_ENV=development vite",
    "vite:build": "vite build",
    "package:mac": "OS_ENV=mac NODE_ENV=production vite build && electron-builder --mac",
    "package:win": "OS_ENV=win NODE_ENV=production vite build && electron-builder --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.6",
    "pinia": "^2.1.7",
    "sqlite3": "5.1.6",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0"
  }
}
